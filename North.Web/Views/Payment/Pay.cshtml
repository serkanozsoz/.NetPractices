<div class="container p-0">
    <div class="row">
        <div class="col-6">
            <div class="card px-4">
                <p class="h8 py-3">Payment Details</p>
                <div class="row gx-3">
                    <div class="col-12">
                        <div class="d-flex flex-column">
                            <p class="text mb-1">Person Name</p>
                            <input class="form-control mb-3"
                                   type="text"
                                   placeholder="Name"
                                   value="Barry Allen" />
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="d-flex flex-column">
                            <p class="text mb-1">Card Number</p>
                            <input class="form-control mb-3"
                                   type="text"
                                   placeholder="1234 5678 435678" id="txt-cardNumber" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex flex-column">
                            <p class="text mb-1">Expiry</p>
                            <input class="form-control mb-3"
                                   type="text"
                                   placeholder="MM/YYYY" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex flex-column">
                            <p class="text mb-1">CVV/CVC</p>
                            <input class="form-control mb-3 pt-2"
                                   type="password"
                                   placeholder="***" />
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="btn btn-primary mb-3">
                            <span class="ps-3">Pay $243</span>
                            <span class="fas fa-arrow-right"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card px-4">
                <p class="h8 py-3">Taksitler</p>
                <div class="row gx-3">
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
    {
    <script>
        let cart = [];
        let total = 0;
        $(() => {
            cart = JSON.parse(localStorage.getItem("cart"));
            if (cart == null || cart.length == 0)
                alert("Sepetiniz boş olamaz!");
            for (let i = 0; i < cart.length; i++) {
                const data = cart[i];
                total += data.count * data.unitPrice;
            }
            $("#txt-cardNumber").on("blur",
                function() {
                    const cardNumber = $(this).val();
                    if (cardNumber.length == 0)
                        return;
                    let data = {
                        cardNumber: cardNumber,
                        price: total
                    }
                    $.ajax({
                        url: "../taksit-kontrol",
                        method: "POST",
                        data: data,
                        dataType: "json",
                        headers: {
                            "Content-Type": "application/json"
                        }
                    }).done((response) => {
                        console.log(response);
                    }).fail((response) => {
                        console.log(response);
                    });
                });
        })
    </script>
}
